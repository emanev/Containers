@model Containers.Web.ViewModels.Schedules.ScheduleListViewModel
@{
    this.ViewData["Title"] = "All schedules";   //, page " + Model.PageNumber;
}

@if (this.TempData.ContainsKey("Message"))
{
    <div class="alert alert-success">@this.TempData["Message"]</div>
}

<h1>@this.ViewData["Title"]</h1>
<hr />

<div class="container">
    @if (this.User.Identity.IsAuthenticated)
    {
        <a class="btn btn-primary" asp-area="" asp-controller="Schedule" asp-action="Create">Create schedule</a>
    }
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Description</th>
                <th>Object Type</th>
                <th>Raise Date</th>
                <th>SRS Object Name</th>
                <th>District Name</th>
                <th>Raise Time From</th>
                <th>Raise Time To</th>               
            </tr>
        </thead>
        <tbody>
            @foreach (var schedule in this.Model.Schedules)
            {
                <tr>
                    <td>@schedule.Description</td>
                    <td>@schedule.ObjectType</td>
                    <td>@schedule.RaiseDate</td>
                    <td>@schedule.SrsobjectName</td>
                    <td>@schedule.DistrictName</td>
                    <td>@schedule.RaiseTimeFrom</td>
                    <td>@schedule.RaiseTimeTo</td>                    
                </tr>
            }
        </tbody>
    </table>
</div>

<hr />

