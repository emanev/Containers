@model Containers.Web.ViewModels.SRSObjects.Industrial.SRSObjectIndustrialSchemeInputModel
@{
    ViewData["Title"] = "Create scheme";
}

    <form method="post" class="col-md-6 offset-md-3"
          enctype="multipart/form-data">
        <h1>@this.ViewData["Title"]</h1>
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="EntryDate"></label>
            <input asp-for="EntryDate" type="date" class="form-control" />
            <span asp-validation-for="EntryDate" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="WeekDay"></label>
            <select asp-for="WeekDay" class="form-control"
                    asp-items="@Html.GetEnumSelectList<Containers.Web.ViewModels.SRSObjects.Industrial.Weekday>()">
            </select>
            <span asp-validation-for="WeekDay" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Hour"></label>
            <input asp-for="Hour" class="form-control" />
            <span asp-validation-for="Hour" class="text-danger"></span>
        </div>
        <input type="submit" class="btn btn-primary" />
    </form>
